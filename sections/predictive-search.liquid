{% if predictive_search.performed %}
    <div id="predictive-search-results" class="p-14 border border-gray-300 max-h-search-container overflow-y-auto">
        {% if predictive_search.resources.products.size > 0 %}
            <h3 class="uppercase text-2xl font-semibold mb-5">Products</h3> 
        {% endif %}
        <ul id="predictive-search-results-list" role="listbox" class="grid grid-cols-1 lg:grid-cols-4 sm:grid-cols-2 gap-x-5 gap-y-7">
            {% for product in predictive_search.resources.products %}
               <li id="predictive-search__list-item" role="option">
                    <article class="relative" data-price="{{ product.price | money_with_currency }}">
                        <a id="predictive-search__item" href="{{ product.url }}" tabindex="-1">
                            {%- if product.featured_media != blank -%}
                                <img class="w-full"
                                    loading="lazy"
                                  src="{{ product.featured_media | image_url: width: 300 }}"
                                  alt="{{ product.featured_media.alt }}"
                                  width="300"
                                  height="{{ 50 | divided_by: product.featured_media.preview_image.aspect_ratio }}"
                                >
                              {%- endif -%}
                            <div id="predictive-search__item-content">
                                <div id="predictive-search__item-heading">{{ product.title }}</div>
                                <div id="product_loop_price">{{ product.price | money_with_currency }}</div>
                            </div>
                        </a>
                    </article>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endif %}